h1 {
  font-size: 48px;
  font-weight: bold;
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 0;
}

div {
  padding: 20px;
  border-radius: 10px;
}

h1:nth-child(2) {
  margin-left: 20px;
  animation: blinker 0.5s linear infinite;
}

@keyframes blinker {
  50% {
    opacity: 0;
  }
}